<%= form_for(@data, url: url_for(action: 'edit_post', info_id: @data.id), multipart: true ) do |f| %>
<div class="form-group">
  <label for="">Judul</label>
  <%= f.text_field :info_judul, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Penulis</label>
  <%= f.text_field :info_created_by, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Isi</label>
  <%= f.text_field :info_isi, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Photo</label>
  <%= f.file_field :info_photo, {class: 'form-control'} %>
</div>

<div class="form-group">
  <input type="submit" value="Perbarui Data" class="btn btn-primary">
</div>
<% end %>

<div class="table-responsive">


<table class="table table-striped table-bordered">
  <a href="/sp/peserta/baru" class="btn btn-primary">Baru</a>
  <thead>
    <tr>
      <th style="text-align:center">Aksi</th>
      <th style="text-align:center">#</th>
      <th style="text-align:center">Nama</th>
      <th style="text-align:center">Jenis Kelamin</th>
      <th style="text-align:center">Alamat</th>
      <th style="text-align:center">Kebutuhan Khusus</th>


    </tr>
  </thead>
  <tbody>

    <% @datas.each do |f| %>
    <tr>
      <td>
        <a href="<%= url_for action: 'view', pesertaa_id: f.id %>" class="btn btn-small btn-default">View</a>
        <a href="<%= url_for action: 'edit', pesertaa_id: f.id %>" class="btn btn-small btn-default">Edit</a>
        <%= link_to 'hapus',url_for(action: :hapus, pesertaa_id: f.id), method: :delete, data: {confirm: "Apakah Anda yakin ingin menghapus data tersebut?"}, class: 'btn btn-small btn-default' %>
      </td>
      <td><%= f.id %></td>
      <td><%= f.pesertaa_nama %></td>
      <td><%= f.pesertaa_jk %></td>
      <td><%= f.pesertaa_alamat %></td>
      <td><%= f.pesertaa_kategori %></td>
      


    </tr>
    <% end %>


  </tbody>
</table>
</div>

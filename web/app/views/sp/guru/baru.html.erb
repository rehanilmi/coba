<%= form_for(@data, url: url_for(action: 'baru_post'), multipart: true ) do |f| %>
<div class="form-group">
  <label for="">Nama Lengkap</label>
  <%= f.text_field :guru_nama, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Tanggal Lahir</label>
  <%= f.date_field :guru_tgl_lahir, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Tempat Lahir</label>
  <%= f.text_field :guru_tempat_lahir, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Jenis Kelamin</label>
  <%= f.select(:guru_jk, ['Laki-laki', 'Perempuan'], {}, { class: 'form-control ' } ) %>
</div>
<div class="form-group">
  <label for="">Status Kepegawaian</label>
  <%= f.select(:guru_status_kepegawaian, ['Pegawai', 'Non Pegawai'], {}, { class: 'form-control' } ) %>
</div>
<div class="form-group">
  <label for="">Alamat Lengkap</label>
  <%= f.text_field :guru_alamat, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">No Telepon</label>
  <%= f.text_field :guru_telepon, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Email</label>
  <%= f.text_field :guru_email, {class: 'form-control'} %>
</div>

<div class="form-group">
  <label for="">Bidang Studi</label>
  <%= f.text_field :guru_bidang_studi, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Pendidikan Terakhir</label>
  <%= f.text_field :guru_pendidikan_terakhir, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Agama</label>
  <%= f.select(:guru_agama, ['Islam', 'Kriten','Hindu','Budha','Protestan','Konghucu'], {}, { class: 'form-control ' } ) %>
</div>
<div class="form-group">
  <label for="">Status Perkawinan</label>
  <%= f.text_field :guru_status_perkawinan, {class: 'form-control'} %>
</div>
<div class="form-group">
  <label for="">Photo</label>
  <%= f.file_field :guru_photo, {class: 'form-control'} %>
</div>

<div class="form-group">
  <input type="submit" value="Masukan Data" class="btn btn-primary">
</div>
<% end %>
